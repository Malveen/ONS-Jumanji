//Fixes the fact that PF does not refresh accessible checkbox value on datatables 
AUI().ready(function(A) {
	//Check there is a PF on the page
	row = AUI().one('tr[aria-selected=true]');
	if(row != null) {
		//Check some element is selected
		radio = row.one('input[type=radio]');
		if(radio != null) {
			radio.set('checked','checked');
		}
	}
});

//This function highlights the expanded rows in PF
function expandRowActions() {
	$('.ui-icon-circle-triangle-s').parent().parent().css("font-weight","bold");
	$('.ui-icon-circle-triangle-e').parent().parent().css("font-weight","normal");
}